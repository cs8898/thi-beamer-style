% Title page
\defbeamertemplate*{title page}{texsx}[1][]
{
   \vskip \dimexpr(\thititlefaklogoheight+8mm)%
   \begin{beamercolorbox}[#1]{title page header}
   \usebeamerfont*{title}\hfill\thititlefak\par%
   \end{beamercolorbox}
   \vskip 10mm 
   \begin{beamercolorbox}[#1]{title page header}
      \usebeamerfont*{title}\hfill\thititleA\par%
      \usebeamerfont*{title}\hfill\thititleB\par%
    \end{beamercolorbox}%
    \vskip 0.75cm%
    \begin{beamercolorbox}[#1]{author}
      \usebeamerfont{author}\hfill\insertauthor%
    \end{beamercolorbox}
     \vskip 1.2cm%
    \begin{beamercolorbox}[#1]{date}
      \usebeamerfont{date}\hfill\insertdate%
    \end{beamercolorbox}
  \vfill
}

